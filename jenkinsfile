pipeline {
  agent any
  stages {
    stage ('git clone'){
      steps {
         git branch: 'master', credentialsId: 'dba4200a-8fce-417d-a08d-78ce042c98af', url: 'https://github.com/Vivekanandgm/pipelinerepo.git'
        sh '''
        echo "Cloned succesfully" 
        '''
      }
    }
      stage ('Build with maven'){
        steps {
          sh '''
          mvn clean package
          '''
        }
      }
      stage ('deploy to tomcat') {
        steps {
        script {
          deploy adapters: [tomcat9(credentialsId: 'b4b62502-1da0-4eb4-b05b-b959fab95af9', path: '', url: 'http://65.2.179.174:8080/')], contextPath: 'pipeline', war: '**/*.war'
        }
        }
      }
  }
}
